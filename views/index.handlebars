<h1>Burger Log</h1>
<div class="display">

    <div class="not-eaten">
        <ul>
            {{#each burgers}}
            <li>
                {{burger_name}}
            </li>
                {{!-- {{#unless sleepy}}
                    {{> cats/cat-block sleep=true}}
                {{/unless}} --}}
            {{/each}}
        </ul>
    </div>

    <div class="eaten">
